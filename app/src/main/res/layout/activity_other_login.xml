<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asus.wechat.login.view.OtherLoginActivity">

    <LinearLayout
        android:id="@+id/toolBar_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/my_colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/go_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/left_back" />

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@color/my_colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="登录微信"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <EditText
            android:id="@+id/other_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="QQ号/微信号/Email"
            android:inputType="phone"
            android:paddingLeft="80dp" />

        <TextView
            android:id="@+id/area_Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="帐号"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/delete_tv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignRight="@id/other_number"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/btn_delete"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingLeft="80dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="密码"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/delete_tv2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignRight="@id/password"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/btn_delete"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@color/green_dark"
        android:enabled="false"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:text="登录遇到问题？"
        android:textColor="@color/blue_dark"
        android:textSize="16sp" />
</LinearLayout>
