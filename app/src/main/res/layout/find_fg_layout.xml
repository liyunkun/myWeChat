<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_moments"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="15dp"
            android:src="@drawable/moments" />

        <TextView
            android:id="@+id/tv_moments"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_moments"
            android:gravity="center"
            android:text="朋友圈" />

        <ImageView
            android:id="@+id/iv_userFace"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_scan_code"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/iv_scan_code"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@drawable/photo_album" />

            <TextView
                android:id="@+id/tv_scan_code"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_toRightOf="@id/iv_scan_code"
                android:gravity="center"
                android:text="扫一扫" />
        </LinearLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_scan_code"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#a1a19e"></View>

        <LinearLayout
            android:id="@+id/ll_shake"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/view">

            <ImageView
                android:id="@+id/iv_shake"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@+id/iv_scan_code"
                android:padding="10dp"
                android:src="@drawable/collect" />

            <TextView
                android:id="@+id/tv_shake"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_below="@+id/iv_scan_code"
                android:layout_toRightOf="@id/iv_scan_code"
                android:gravity="center"
                android:text="摇一摇" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_people_nearby"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_people_nearby"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="15dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_people_nearby"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_moments"
            android:gravity="center"
            android:text="附近的人" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_shopping"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/iv_shopping"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@drawable/photo_album" />

            <TextView
                android:id="@+id/tv_shopping"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="购物" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_shopping"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#a1a19e"></View>

        <LinearLayout
            android:id="@+id/ll_game"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/ll_shopping">

            <ImageView
                android:id="@+id/iv_game"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@drawable/collect" />

            <TextView
                android:id="@+id/tv_game"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_below="@+id/iv_photo_album"
                android:layout_toRightOf="@id/iv_photo_album"
                android:gravity="center"
                android:text="游戏" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>